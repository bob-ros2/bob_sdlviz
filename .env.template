# --- Docker / Headless Mode ---
# Force SDL to use a dummy driver (no X-Server/Window needed).
# Required for Docker or pure server/SSH streaming.
export SDL_VIDEODRIVER=dummy

# --- Twitch Configuration ---
# Your secret stream key (keep this private!)
export TWITCH_STREAM_KEY=live_00000000_xxxxxxxxxxxxxxxxxxxxxxxxxx

# --- Visualization Resolution & FPS ---
export SDLVIZ_WIDTH=854
export SDLVIZ_HEIGHT=480
export SDLVIZ_FPS=30.0

# --- Marker Rendering Tweaks ---
# Uniform scale factor for markers
export SDLVIZ_SCALE=1200.0
# Horizontal and vertical pixel offsets
export SDLVIZ_OFFSET_X=-50.0
export SDLVIZ_OFFSET_Y=-110.0
# List of namespaces to exclude (comma-separated, e.g., "face,background")
export SDLVIZ_EXCLUDE_NS=""

# --- Terminal & Font Configuration ---
# Absolute path to your terminal layout JSON
export SDLVIZ_CONFIG_PATH="/ros2_ws/src/bob_sdlviz/config/sdlviz.json"
# Absolute path to the TTF font
export SDLVIZ_FONT_PATH="/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf"
export SDLVIZ_FONT_SIZE=16

# --- Audio Configuration ---
# Absolute path to your audio FIFO
export SDLVIZ_AUDIO_PATH="/tmp/audio_pipe"
# ENABLE_AUDIO source: "fifo" (Docker), "pulse" (Host), or "false"
export ENABLE_AUDIO=false

# --- Video Output & Streaming ---
# Whether to show the local SDL window (set false for headless)
export SDLVIZ_SHOW_WINDOW=false
# Enable writing BGRA frames to the pipe
export SDLVIZ_STREAM_OUTPUT=true
# Path to the video FIFO pipe
export SDLVIZ_STREAM_PATH="/tmp/video_pipe"

# --- Environment & ROS Paths ---
# Internal ROS setup path (inside container or local)
export ROS_SETUP_PATH="/ros2_ws/install/setup.bash"
export ROS_DOMAIN_ID=99